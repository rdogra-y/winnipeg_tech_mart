<h2>Edit Tax Rates for <%= @province.name %></h2>

<%= form_with(model: @province, local: true) do |form| %>
  <div>
    <%= form.label :gst %>
    <%= form.number_field :gst, step: 0.01 %>
  </div>
  <div>
    <%= form.label :pst %>
    <%= form.number_field :pst, step: 0.01 %>
  </div>
  <div>
    <%= form.label :hst %>
    <%= form.number_field :hst, step: 0.01 %>
  </div>
  <%= form.submit "Update Tax Rates" %>
<% end %>
