<h1>Order Invoice</h1>

<p><strong>Status:</strong> <%= @order.status %></p>
<p><strong>Total:</strong> $<%= @order.total %></p>

<h2>Items:</h2>
<ul>
  <% @order.order_items.each do |item| %>
    <li style="margin-bottom: 20px;">
      <% if item.product.image.attached? %>
        <%= image_tag item.product.image, width: 100, style: "vertical-align: middle; margin-right: 10px;" %>
      <% end %>
      <strong><%= item.product.name %></strong> —
      Qty: <%= item.quantity %> —
      $<%= (item.price * item.quantity).round(2) %>
    </li>
  <% end %>
</ul>

<% province = @order.user.province %>
<p><strong>Province:</strong> <%= province.name %></p>
<p>GST: <%= province.gst %> | PST: <%= province.pst %> | HST: <%= province.hst %></p>

<h2>Billing Summary</h2>
<p><strong>Subtotal:</strong> $<%= @order.subtotal.round(2) %></p>
<p><strong>GST:</strong> $<%= @order.gst.round(2) %></p>
<p><strong>PST:</strong> $<%= @order.pst.round(2) %></p>
<p><strong>HST:</strong> $<%= @order.hst.round(2) %></p>
<p><strong>Total:</strong> $<%= @order.total.round(2) %></p>
