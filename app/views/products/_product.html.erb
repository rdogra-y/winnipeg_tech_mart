<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Stock quantity:</strong>
    <%= product.stock_quantity %>
  </p>

  <p>
    <strong>Image:</strong>
    <% if product.image.attached? %>
    <p>
      <strong>Image:</strong><br>
      <%= image_tag url_for(product.image), style: "max-width: 150px;" %>
    </p>
  <% else %>
    <p>No image attached</p>
  <% end %>  
  </p>

  <p>
    <strong>Category:</strong>
    <%= product.category_id %>
  </p>

</div>
