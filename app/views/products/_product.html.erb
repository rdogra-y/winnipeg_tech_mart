<div id="<%= dom_id product %>" style="border: 1px solid #ccc; border-radius: 8px; padding: 15px; width: 300px; box-shadow: 2px 2px 8px rgba(0,0,0,0.1);">

  <% if product.image.attached? %>
    <%= image_tag url_for(product.image), style: "width: 100%; height: auto; border-radius: 5px; border: 1px solid #ccc;" %>
  <% else %>
    <div style="height: 200px; display: flex; align-items: center; justify-content: center; background-color: #f5f5f5; border: 1px solid #ccc; border-radius: 5px;">No Image</div>
  <% end %>

  <h2 style="font-size: 1.25rem; font-weight: bold; margin: 10px 0;"> <%= product.name %> </h2>
  <p><strong>Description:</strong> <%= truncate(product.description, length: 100) %></p>
  <p><strong>Price:</strong> $<%= product.price %></p>
  <p><strong>Stock:</strong> <%= product.stock_quantity %></p>
  <p><strong>Category:</strong> <%= product.category&.name || "Uncategorized" %></p>

  <%= link_to "View Details", product_path(product), style: "display: inline-block; margin-top: 10px; padding: 8px 12px; background-color: #2196f3; color: white; text-decoration: none; border-radius: 4px; box-shadow: 1px 1px 5px rgba(0,0,0,0.2);" %>
</div>
